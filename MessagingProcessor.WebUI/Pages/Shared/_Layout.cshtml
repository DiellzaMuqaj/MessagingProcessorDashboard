
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MessagingProcessor.WebUI</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/MessagingProcessor.WebUI.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Top Navbar -->
    <header class="bg-dark text-white d-flex align-items-center px-4" style="height: 50px;">
        <h5 class="text-white text-center mt-2">MessagingProcessor</h5>
    </header>

    <div class="container-fluid flex-grow-1">
        <div class="row min-vh-100">
            <!-- Sidebar -->
            <nav class="col-md-2 bg-dark text-white p-3 d-flex flex-column">
             
                <ul class="nav flex-column mt-2">
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white py-2 @(Context.Request.Path == "/Index" ? "active bg-secondary rounded" : "")" href="/Index">
                            <i class="bi bi-speedometer2 me-2"></i> System Status
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white py-2 @(Context.Request.Path == "/Send" ? "active bg-secondary rounded" : "")" href="/Send">
                            <i class="bi bi-send me-2"></i> Send Message
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white py-2 @(Context.Request.Path == "/Statistics" ? "active bg-secondary rounded" : "")" href="/Statistics">
                            <i class="bi bi-bar-chart-line me-2"></i>Message Statistics
                        </a>
                    </li>
                </ul>


            </nav>


            <!-- Main content -->
            <main class="col-md-10 px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-auto d-flex align-items-center justify-content-center" style="height: 60px;">
        <div>
            &copy; 2025 - MessagingProcessor.WebUI - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>




    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
